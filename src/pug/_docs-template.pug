block vars
include _mixins
doctype
html
  head
    meta(charset="utf-8")
    title=title
    meta(property="og:image", content="/i/share-banner.jpg")
    meta(name="viewport", content="width=device-width, viewport-fit=cover")
    meta(name="twitter:card", content="summary")
    meta(name="twitter:site", content="@framework7io")
    meta(name="twitter:creator", content="@framework7io")
    meta(name="twitter:title", content=title)
    meta(name="twitter:image", content="https://framework7.io/i/share-banner.jpg")
    meta(name="theme-color" content="#ee350f")
    link(rel="stylesheet", href="/css/main.css")
    link(rel="shortcut icon" href="/i/favicon.png")
    link(rel="preconnect" href="https://fonts.gstatic.com")
    link(rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@docsearch/css@3")
  body.body-docs
    include _nav
    main
      block content
      .docs-right
        .docs-right-block
          include _carbon
        .docs-right-block
          if (srcFileUrl)
            .improve-docs-link
              a(href=srcFileUrl, target="_blank") Improve this Doc
        block docs-index
    include _footer
    include _footer-scripts
    block scripts
